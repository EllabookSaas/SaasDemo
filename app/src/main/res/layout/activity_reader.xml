<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="16dp"
    tools:ignore="RtlHardcoded">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:src="@drawable/reader_exit" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="21dp"
            android:enabled="false"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/reader_menu" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/up"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:enabled="false"
            android:layout_marginRight="5dp"
            android:src="@drawable/reader_left"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:enabled="false"
            android:src="@drawable/reader_play"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:enabled="false"
            android:src="@drawable/reader_pause"
            android:visibility="gone" />


        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/rl_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/pages"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_reader_page_index_bg"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible"
                tools:text="3/20" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/down"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:enabled="false"
            android:src="@drawable/reader_right" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />
</RelativeLayout>